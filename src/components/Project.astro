---
import Tags from './Tags.astro'
import { Image } from 'astro:assets'
const { title, description, link, image, tags = [] }: Project = Astro.props
---

<div class="grid grid-cols-6 gap-x-4 mb-10">
	<div class="col-span-2">
		<Image src={image} alt={`Project ${title}`} width={400} height={200} />
	</div>
	<div class="col-span-4">
		<div class="flex flex-col">
			<h3 class="">{title}</h3>
			<p class="font-light text-sm text-normal/70">{description}</p>
			<Tags tags={tags} />
		</div>
	</div>
</div>
